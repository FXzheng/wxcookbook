.index-container{
  display: flex;
  flex-direction: column;
   width: 100%;
   /* border: 1px solid black; */
}
.index-search{
  margin:100rpx 50rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border: 1px solid #f1f1f1;
  padding: 30rpx;
  border-radius: 200rpx;

}
.index-search image{
  width: 50rpx;
  height: 50rpx;
  margin-right: 20rpx;

}
.index-search input{
  
}
.recommend{
  margin-left: 40rpx;
  font-size: 40rpx;
  font-weight: bold;
}
.index-category{
  display: flex;
  flex-wrap: wrap;
  justify-content:space-around;
  width: 100%;
}
.index-list{
  width: 300rpx;
  align-items: center;
  text-align: center;
  margin-top: 20rpx;
}
.index-list .empty{
  width:300rpx;
  height: 0px;
}
.index-list image{
  width:100%;
  height: 400rpx;
  border-radius: 5px;
}