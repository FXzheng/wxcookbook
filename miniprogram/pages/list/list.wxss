.list-container{
}

.list-title{
 font-size: 40rpx;
  margin: 30rpx;
  font-weight: bold;
}
.menu-l{
  width: 250rpx;
  height: 200rpx;
  margin-right: 30rpx;
  
  
}
.listmenu{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  /* margin-bottom: 20rpx; */
  width:100%;
  padding:30rpx;
  border-bottom: 1px solid #f1f1f1;
  align-items: center;
}
 .menuPic{
  width:100%;
  height: 100%;
  border-radius: 5rpx;
  box-shadow: 10rpx 10rpx #f1f1f1;
  
}

.material{
  display: inline;
  width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 25rpx;
}
.listmenu text{
  padding: 5rpx;
}
.listmenu .title{
  font-size: 40rpx;
}

.listmenu .author{
  color: #D3D3D3;
  font-size:25rpx;
}
.listmenu .score{
 font-size: 25rpx;
}