/* pages/details/details.wxss */
.details-container{
  display: flex;
  flex-direction: column;
  width: 100%;
  font-size: 40rpx;
}
.details-container .b-title{
font-weight: bold;
}
.details-header{
  align-items: center;
  text-align: center;
  margin: 0 30rpx;
  border-bottom: 1px solid #f1f1f1;
}
.details-pic{
  width:100%;
}
.details-header .details-title{
  display: block;
  padding:50rpx 0;
 
}
.tools{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.collect>image{
  width:60rpx;
  height: 60rpx;
  margin-right: 80rpx;
}
.author-details{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  margin:50rpx 30rpx;
}
.details{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}
.author-details> text{
  display: block;
  font-size: 20rpx;
  margin-left: 20rpx;
}
.author-details .author{
 font-size: 30rpx;
}
.author-details .head-portrait{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.table{
  margin:0 30rpx;
}
.table .tr{
  display: flex;
  flex-direction: row;
  border-top: 1px solid #f1f1f1;
  justify-content: center;
  font-size: 30rpx; 
  padding: 30rpx 0;
 
}
.table .tr .td{
  width: 50%;
}
.step{
  display: flex;
  flex-direction: column;
  margin:30rpx;
  /* letter-spacing: 2rpx; */
  line-height: 50rpx;
  border-top: 1px solid #f1f1f1;
}
.step .steppic{
  width: 100%;
}
.step text{
  padding: 20rpx 0;
}